<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/photo_album_video_item_thumbnail"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_launcher"/>

        <ImageButton
            android:id="@+id/photo_album_video_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_media_play"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/photo_album_video_item_author_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo_album_video_item_thumbnail"
            android:layout_alignLeft="@+id/photo_album_video_item_creation_date_label"
            android:layout_alignParentLeft="true"
            android:text="@string/dummy_author_label"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/photo_album_video_item_creation_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo_album_video_item_thumbnail"
            android:layout_alignParentRight="true"
            android:text="@string/dummy_date_label"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>